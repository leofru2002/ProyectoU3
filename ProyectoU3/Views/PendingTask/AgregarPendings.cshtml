
@{
    ViewBag.Title = "AgregarPendings";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col text-center">
            <h1>CONSIGNAS UFA-ESPE "SANTO DOMINGO"</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">NUEVA CONSIGNA</h5>
                </div>
                <div class="card-body">
                    <form action="" method="post">
                        <div class="form-group">
                            <label for="newPendding">Detalle la consigna: </label>
                            <textarea id="newPendding" class="form-control" rows="3" name="newPendding"></textarea>
                        </div>
                        <div class="row mt-3 justify-content-end">
                            <div class="col-md-5 pr-1">
                                <button type="button" onclick="location.href='@Url.Action("Pendings", "PendingTask")'" class="btn btn-danger btn-block">CANCELAR</button>
                            </div>
                            <div class="col-md-5 pl-1">
                                <input type="submit" value="GUARDAR" class="btn btn-success btn-block" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
