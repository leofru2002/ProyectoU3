
@{
    ViewBag.Title = "UpdateUsers";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col text-center">
            <h1>ADMINISTRACIÓN DE USUARIO</h1>
        </div>
    </div>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h3 class="card-title mb-0">MODIFICAR USUARIO</h3>
                    </div>
                    <div class="card-body">
                        <div class="rounded border border-white shadow p-3">
                            <form action="multipart/form-data">
                                <div class="modal-body">
                                    <div id="vehOutForm" class="row mt-3">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="names">Nombres: </label>
                                                <input type="text" id="names" value="" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="last_names">Apellidos: </label>
                                                <input type="text" id="last_names" value="" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="email">Correo Electrónico: </label>
                                                <input type="email" id="email" value="" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="password">Contraseña: </label>
                                                <input type="password" id="password" value="" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="identification_card">Cédula de Identidad: </label>
                                                <input type="text" id="identification_card" value="" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="phone">Celular: </label>
                                                <input type="text" id="phone" value="" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="blood_type">Tipo de Sangre:</label>
                                                <select id="blood_type" value="" class="form-control">
                                                    <option value="A+">A+</option>
                                                    <option value="A-">A-</option>
                                                    <option value="B+">B+</option>
                                                    <option value="B-">B-</option>
                                                    <option value="AB+">AB+</option>
                                                    <option value="AB-">AB-</option>
                                                    <option value="O+">O+</option>
                                                    <option value="O-">O-</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group form-check">
                                                <input type="checkbox" id="is_admin" class="form-check-input" style="width: 20px; height: 20px; margin-top: 0.375rem;">
                                                <label class="form-check-label" for="is_admin">Administrador</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" onclick="location.href='@Url.Action("AdminUsers", "User")'" class="btn btn-danger">CANCELAR</button>
                                    <button type="button" class="btn btn-success">ACTUALIZAR</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


