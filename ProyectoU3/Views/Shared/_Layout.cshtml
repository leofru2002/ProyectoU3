<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ESPE-SD BITÁCORA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-success">
        <div class="container">
            @Html.ActionLink("UFA ESPE-SD", "Binnacle", "Novelty", new { area = "" }, new { @class = "navbar-brand mr-5 fas" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink(" NOVEDADES", "Binnacle", "Novelty", new { area = "" }, new { @class = "nav-link text-white fs-5 fas fa-newspaper" })</li>
                    <li>@Html.ActionLink(" CONSIGNAS", "Pendings", "PendingTask", new { area = "" }, new { @class = "nav-link text-white fs-5 fas fa-tasks" })</li>
                    <li>@Html.ActionLink(" ADMINISTRADOR", "Admins", "Admin", new { area = "" }, new { @class = "nav-link text-white fs-5 fas fa-user-cog" })</li>
                </ul>
            </div>
            <a href="@Url.Action("Index", "Login")" class="btn btn-outline-light ms-3">
                <span class="fas fa-times"></span> <!-- Icono "X" -->
            </a>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Grupo Dinamita ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
